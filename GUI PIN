    private void PINButtActionPerformed(java.awt.event.ActionEvent evt) {                                        
        if(Pass.getText().equals("")){
           new NewJFrame().show();
    }
        else if (Pass.getText().contains("8888")){
            new MainMenu().show();
            this.dispose();
    }
        else{
            new Error().show();
        }
    }                                       

    private void PassFocusGained(java.awt.event.FocusEvent evt) {                                 
